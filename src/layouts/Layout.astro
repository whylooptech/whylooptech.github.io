---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/space-grotesk";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

// TODO: change the link to opengraph
const resolvedImageWithDomain = new URL(
  "/opengraph.png",
  Astro.site,
).toString();

const resolvedLogoWithDomain = new URL("/favicon.svg", Astro.site).toString();

const { title } = Astro.props;

const makeTitle = title ? title + " | " + "WhyLoop" : "WhyLoop - DevOps";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description="WhyLoop is a DevOps services provider."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: "WhyLoop",
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "WhyLoop Homepage Screenshot",
        },
      }}
    />
    <!-- logo does not seem to be configurable in astro-seo -->
    <meta property="og:logo" content={resolvedLogoWithDomain} />

    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-2R5DE9PQTC"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-2R5DE9PQTC");
    </script>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
